{
  "name": "cktsun-helper",
  "type": "module",
  "scripts": {
    "build": "tsup src --minify --format esm --sourcemap --clean --target esnext",
    "dev": "cross-env NODE_ENV=development nodemon",
    "format": "prettier --write .",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --fix .",
    "prepare": "is-ci || husky install",
    "start": "node --enable-source-maps -r dotenv/config dist/index.js | pino-pretty",
    "start:pm2": "pm2-runtime --max-memory-restart 200M pnpm -- start",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@extractus/article-extractor": "7.2.15",
    "@fastify/rate-limit": "8.0.0",
    "@iamtraction/google-translate": "2.0.1",
    "@sentry/node": "7.52.1",
    "axios": "1.4.0",
    "bing-chat": "0.2.3",
    "croner": "6.0.3",
    "cross-env": "7.0.3",
    "crypto-js": "4.1.1",
    "dayjs": "1.11.7",
    "discord.js": "14.11.0",
    "dotenv": "16.0.3",
    "fastify": "4.17.0",
    "glob": "10.2.5",
    "html-to-text": "9.0.5",
    "is-ci": "3.0.1",
    "mongoose": "7.1.2",
    "node-cache": "5.1.2",
    "nodemon": "2.0.22",
    "normalize-url": "8.0.0",
    "pidusage": "3.0.2",
    "pino": "8.14.1",
    "pino-pretty": "10.0.0",
    "pm2": "5.3.0",
    "rss-parser": "3.13.0",
    "s-ago": "2.2.0",
    "ws": "8.13.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@ckt1031/eslint-config": "1.1.6",
    "@ckt1031/prettier-config": "1.1.6",
    "@ckt1031/tsconfig": "1.1.6",
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@types/crypto-js": "4.1.1",
    "@types/html-to-text": "9.0.0",
    "@types/pidusage": "2.0.2",
    "@types/ws": "8.5.4",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.40.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "tsup": "6.7.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18 <21",
    "pnpm": "8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*.{yml,yaml,cjs,mjs,js,jsx,ts,tsx,json,css,html,md}": [
      "prettier -c"
    ]
  },
  "nodemonConfig": {
    "exec": "pnpm run build && pnpm run start",
    "ext": "ts,mjs,js,cjs,json,graphql",
    "ignore": [
      "dist",
      "src/**/*.test.ts",
      "node_modules"
    ],
    "watch": [
      "src"
    ]
  },
  "packageManager": "pnpm@8.5.1",
  "prettier": "@ckt1031/prettier-config"
}
